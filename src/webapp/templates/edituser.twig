{% extends 'base.twig' %}

{% block content %}

    <h2>Edit profile</h2>
    <img src="/images/profiles/{{ user.image }}">


    <form action="" method="POST" enctype="multipart/form-data">
        <div id="flasherror">{{ flash.error|e }}</div>

        <label>email:</label>
        <input type="email" name="email" value="{{ user.email|e }}"> <br />

        <label>Bio:</label>
        <textarea name="bio">{{ user.bio|e }}</textarea>

        <label>Age:</label>
        <input type="number" name="age" value="{{ user.age|e }}" pattern=".{1,3}" min='0' max='150' title="Age must be between 0 - 150" required> <br />

        <label> Profile Picture: </label>

        <input type="file" name="image" accept='image/*'> <br />

        <input type='hidden' name='{{csrf.id}}' value='{{csrf.value}}'/>

        <input type="submit" name="submit" value="Save profile">
    </form>
{% endblock %}
