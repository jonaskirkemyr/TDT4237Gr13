{% extends 'base.twig' %}

{% block content %}

    <h2>Edit profile</h2>
    <img src="/images/profiles/{{ user.image }}">

    <form action="" method="POST" enctype="multipart/form-data">
        <div id="flasherror">{{ flash.error|raw }}</div>

        <label>email:</label>
        <input type="text" name="email" value="{{ user.email|raw }}"> <br />

        <label>Bio:</label>
        <textarea name="bio">{{ user.bio|raw }}</textarea>

        <label>Age:</label>
        <input type="text" name="age" value="{{ user.age|raw }}"> <br />

        <label> Profile Picture: </label>

        <input type="file" name="image" accept='image/*'> <br />

        <input type='hidden' name='{{csrf.id}}' value='{{csrf.value}}'/>

        <input type="submit" name="submit" value="Save profile">
    </form>
{% endblock %}
