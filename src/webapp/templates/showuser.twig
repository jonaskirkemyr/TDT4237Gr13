{% extends 'base.twig' %}

{% block content %}

<h2>User</h2>

{{ flash.info }} <br />
{{ flash.error }} <br />

{% if user %}
    <img src="/images/profiles/{{ user.image }}">
    <table>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Bio</th>
            <th>Age</th>
        </tr>
            <tr>
            <td>{{ user.username }}</td>
            <td>{{ user.email }}</td>
            <td>{{ user.bio }}</td>
            <td>{{ user.age }}</td>
        </tr>
    </table>

{% else %}
    Could not find user.
{% endif %}

{% endblock %}
