{% extends 'base.twig' %}

{% block content %}

<h2>Admin section</h2>


{% if users %}
<form method='post' action=''>
<input type='hidden' name='{{csrf.id}}' value='{{csrf.value}}'/>

    <table>
    <tr>
        <th>Id</th>
        <th>Username</th>
    </tr>


    {% for user in users %}
        <tr>
            <td>{{ user.id }}</td>
            <td><a href="/user/{{ user.username }}">{{ user.username }}</a></td>
            <td><button type='submit' name='delUser' value='{{user.username}}'>Delete this user</button></td>
            <!--<td><a href="/admin/delete/{{ user.username }}">Delete this user</a></td>-->
        </tr>
    {% endfor %}
    </table>
</form>
{% else %}
    The users table is empty.
{% endif %}

{% endblock %}
